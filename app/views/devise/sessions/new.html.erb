<h2 class="text-center">Please sign in</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-signin"}, label_col: "col-sm-2", control_col: "col-sm-4") do |f| %>

    <%= f.email_field :email, required: false, autofocus: true, hide_label: :true, placeholder: "Email Address" %>
    <%= f.password_field :password, required: false, hide_label: :true, placeholder: "Password" %>
    <%= f.form_group do %>
    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <% end %>
    <%= f.form_group do %>
    <%= f.submit "Sign in", class: "btn btn-primary btn-block" %>
    <% end %>

    <%= render "devise/shared/links" %>

<% end %>


